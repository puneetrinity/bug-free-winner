{
  "name": "hr-research-platform",
  "version": "1.0.0",
  "description": "AI-powered HR research platform for Indian market",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/db/schema.sql dist/db/ && cp -r src/public dist/",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:reset": "tsx src/scripts/migrate.ts --reset",
    "db:seed": "tsx src/scripts/migrate.ts --seed",
    "collect": "tsx src/scripts/collect.ts",
    "collect:stats": "tsx src/scripts/collect.ts --stats",
    "collect:rss": "tsx src/scripts/collect-rss.ts",
    "collect:rss:hourly": "tsx src/scripts/collect-rss.ts --hourly",
    "generate": "tsx src/scripts/generate-report.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/feedparser": "^2.2.7",
    "@types/pg": "^8.10.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "feedparser": "^2.2.10",
    "groq-sdk": "^0.32.0",
    "pg": "^8.11.3",
    "puppeteer": "^21.6.1",
    "scrapingbee": "^1.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0"
  }
}
